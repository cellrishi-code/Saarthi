        // ============================================
        // PARTICLE SYSTEM
        // ============================================
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const size = Math.random() * 80 + 30;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.animationDelay = `${Math.random() * 5}s`;
                particle.style.animationDuration = `${20 + Math.random() * 15}s`;
                
                particlesContainer.appendChild(particle);
            }
        }

        // ============================================
        // ANIMATED COUNTER
        // ============================================
        function animateCounter() {
            const counter = document.getElementById('userCounter');
            const target = Math.floor(Math.random() * 500) + 1247; // Random number between 1247-1747
            const duration = 2000;
            const increment = target / (duration / 16);
            let current = 0;

            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    counter.textContent = target.toLocaleString();
                    clearInterval(timer);
                } else {
                    counter.textContent = Math.floor(current).toLocaleString();
                }
            }, 16);
        }

        // ============================================
        // ROTATING QUOTES
        // ============================================
        function rotateQuotes() {
            const quotes = document.querySelectorAll('.quote');
            let currentIndex = 0;

            quotes[currentIndex].classList.add('active');

            setInterval(() => {
                quotes[currentIndex].classList.remove('active');
                currentIndex = (currentIndex + 1) % quotes.length;
                quotes[currentIndex].classList.add('active');
            }, 3500);
        }

        // ============================================
        // THEME TOGGLE
        // ============================================
        function setupThemeToggle() {
            const themeToggle = document.getElementById('themeToggle');
            const sunIcon = themeToggle.querySelector('.fa-sun');
            const moonIcon = themeToggle.querySelector('.fa-moon');

            themeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark-theme');
                const isDark = document.body.classList.contains('dark-theme');
                
                sunIcon.style.display = isDark ? 'none' : 'block';
                moonIcon.style.display = isDark ? 'block' : 'none';
                
                playSound();
            });
        }

        // ============================================
        // SOUND TOGGLE
        // ============================================
        function setupSoundToggle() {
            const soundToggle = document.getElementById('soundToggle');
            
            soundToggle.addEventListener('click', () => {
                soundEnabled = !soundEnabled;
                soundToggle.classList.toggle('muted');
                const icon = soundToggle.querySelector('i');
                icon.className = soundEnabled ? 'fas fa-volume-up' : 'fas fa-volume-mute';
                
                if (soundEnabled) playSound();
            });
        }

        // ============================================
        // SOUND FEEDBACK
        // ============================================
        function playSound(type = 'click') {
            if (!soundEnabled) return;
            
            // Create simple beep sound using Web Audio API
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = type === 'success' ? 800 : 600;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.1);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.1);
        }

        // ============================================
        // RIPPLE EFFECT
        // ============================================
        function createRipple(event, element) {
            const ripple = document.createElement('div');
            ripple.className = 'ripple';
            
            const rect = element.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = event.clientX - rect.left - size / 2;
            const y = event.clientY - rect.top - size / 2;
            
            ripple.style.width = ripple.style.height = `${size}px`;
            ripple.style.left = `${x}px`;
            ripple.style.top = `${y}px`;
            
            element.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        }

        // ============================================
        // PROGRESS INDICATOR
        // ============================================
        function updateProgress() {
            const progressFill = document.getElementById('progressFill');
            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const step3 = document.getElementById('step3');

            if (selectedDepartment) {
                progressFill.style.width = '50%';
                step1.classList.add('active', 'completed');
                step1.classList.remove('active');
            }

            if (selectedSemester) {
                progressFill.style.width = '100%';
                step2.classList.add('active', 'completed');
                step2.classList.remove('active');
                step3.classList.add('active');
            }
        }

        // ============================================
        // DEPARTMENT SELECTION
        // ============================================
        function setupDepartmentSelection() {
            const departmentCards = document.querySelectorAll('.department-card');
            const semesterSection = document.getElementById('semesterSection');

            departmentCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    createRipple(e, this);
                    playSound();

                    departmentCards.forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                    
                    selectedDepartment = this.dataset.dept;
                    updateProgress();
                    
                    setTimeout(() => {
                        semesterSection.classList.add('active');
                        semesterSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }, 300);
                });
            });
        }

        // ============================================
        // SEMESTER SELECTION
        // ============================================
        function setupSemesterSelection() {
            const semesterCards = document.querySelectorAll('.semester-card');
            const continueContainer = document.getElementById('continueContainer');

            semesterCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    createRipple(e, this);
                    playSound();

                    semesterCards.forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                    
                    selectedSemester = this.dataset.semester;
                    updateProgress();
                    
                    continueContainer.classList.add('active');
                });
            });
        }

        // ============================================
        // SEARCH FUNCTIONALITY
        // ============================================
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            const departmentCards = document.querySelectorAll('.department-card');
            const semesterCards = document.querySelectorAll('.semester-card');

            searchInput.addEventListener('input', function() {
                const query = this.value.toLowerCase().trim();
                
                if (query === '') {
                    departmentCards.forEach(card => card.style.display = '');
                    semesterCards.forEach(card => card.style.display = '');
                    return;
                }

                // Search departments
                let foundDept = false;
                departmentCards.forEach(card => {
                    const deptName = card.dataset.dept.toLowerCase();
                    if (deptName.includes(query) || departmentMap[query] === card.dataset.dept) {
                        card.style.display = '';
                        foundDept = true;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Search semesters
                if (query.includes('sem') || query.match(/^[1-8]$/)) {
                    const semNumber = query.replace(/\D/g, '');
                    semesterCards.forEach(card => {
                        if (card.dataset.semester === semNumber) {
                            card.style.display = '';
                            if (!document.getElementById('semesterSection').classList.contains('active')) {
                                document.getElementById('semesterSection').classList.add('active');
                            }
                        } else {
                            card.style.display = 'none';
                        }
                    });
                }
            });
        }

        // ============================================
        // CONTINUE BUTTON
        // ============================================
        function setupContinueButton() {
            const continueBtn = document.getElementById('continueBtn');

            continueBtn.addEventListener('click', function() {
                if (selectedDepartment && selectedSemester) {
                    playSound('success');
                    
