<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAARTHI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* === VARIABLES === */
        :root {
            --primary-green: #4caf50;
            --primary-light: #81c784;
            --primary-dark: #2e7d32;
            --accent-green: #66bb6a;
            --bg-gradient-1: #e8f5e9;
            --bg-gradient-2: #c8e6c9;
            --bg-gradient-3: #a5d6a7;
            --text-primary: #1b5e20;
            --text-secondary: #2e7d32;
            --card-bg: rgba(255, 255, 255, 0.75);
            --card-border: rgba(255, 255, 255, 0.5);
            --shadow-sm: 0 4px 16px rgba(46, 125, 50, 0.1);
            --shadow-md: 0 8px 32px rgba(46, 125, 50, 0.15);
            --shadow-lg: 0 12px 48px rgba(46, 125, 50, 0.25);
        }

        .dark-theme {
            --primary-green: #66bb6a;
            --primary-light: #81c784;
            --primary-dark: #4caf50;
            --accent-green: #4caf50;
            --bg-gradient-1: #1a2f1a;
            --bg-gradient-2: #2d4a2d;
            --bg-gradient-3: #3d5a3d;
            --text-primary: #e8f5e9;
            --text-secondary: #c8e6c9;
            --card-bg: rgba(45, 74, 45, 0.75);
            --card-border: rgba(129, 199, 132, 0.3);
            --shadow-sm: 0 4px 16px rgba(0, 0, 0, 0.3);
            --shadow-md: 0 8px 32px rgba(0, 0, 0, 0.4);
            --shadow-lg: 0 12px 48px rgba(0, 0, 0, 0.5);
        }

        /* === RESET & BASE === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, var(--bg-gradient-1) 0%, var(--bg-gradient-2) 50%, var(--bg-gradient-3) 100%);
            min-height: 100vh;
            overflow-x: hidden;
            transition: background 0.5s ease;
            color: var(--text-primary);
        }

        /* === ANIMATED WAVE BACKGROUND === */
        .wave-background {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 200px;
            z-index: 0;
            opacity: 0.15;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 200%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path d="M0,50 Q300,0 600,50 T1200,50 L1200,120 L0,120 Z" fill="%234caf50"/></svg>') repeat-x;
            animation: wave 20s linear infinite;
        }

        .wave:nth-child(2) {
            opacity: 0.5;
            animation-duration: 15s;
            animation-direction: reverse;
        }

        .wave:nth-child(3) {
            opacity: 0.3;
            animation-duration: 25s;
        }

        @keyframes wave {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        /* === PARTICLES === */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .particle {
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, var(--primary-light), transparent);
            opacity: 0.2;
            animation: float 25s infinite ease-in-out;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.2; }
            25% { transform: translate(100px, -150px) scale(1.3); opacity: 0.4; }
            50% { transform: translate(-80px, -300px) scale(0.9); opacity: 0.3; }
            75% { transform: translate(120px, -200px) scale(1.1); opacity: 0.35; }
        }

        /* === CONTAINER === */
        .container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            min-height: 100vh;
        }

        /* === TOP BAR === */
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            margin-bottom: 30px;
            opacity: 0;
            animation: fadeInDown 0.8s ease-out forwards;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .back-button {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            padding: 12px 24px;
            border-radius: 50px;
            border: 1px solid var(--card-border);
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            text-decoration: none;
            color: var(--text-primary);
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .back-button:hover {
            transform: translateX(-5px);
            box-shadow: var(--shadow-md);
        }

        .back-button i {
            color: var(--primary-green);
            font-size: 1.2rem;
        }

        .controls {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        /* === THEME TOGGLE === */
        .theme-toggle {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--card-border);
            border-radius: 50px;
            padding: 8px 12px;
            cursor: pointer;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .theme-toggle:hover {
            transform: scale(1.05);
            box-shadow: var(--shadow-md);
        }

        .theme-toggle i {
            font-size: 1.2rem;
            color: var(--primary-green);
        }

        /* === SOUND TOGGLE === */
        .sound-toggle {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--card-border);
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
        }

        .sound-toggle:hover {
            transform: scale(1.05);
            box-shadow: var(--shadow-md);
        }

        .sound-toggle i {
            font-size: 1.2rem;
            color: var(--primary-green);
        }

        /* === HEADER SECTION === */
        .header-section {
            text-align: center;
            margin-bottom: 50px;
            opacity: 0;
            animation: fadeInUp 1s ease-out 0.3s forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .main-title {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-green), var(--accent-green));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
            letter-spacing: -1px;
        }

        .subtitle {
            font-size: 1.2rem;
            color: var(--text-secondary);
            font-weight: 500;
        }

        /* === SUBJECTS GRID === */
        .subjects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
            opacity: 0;
            animation: fadeInUp 1s ease-out 0.6s forwards;
        }

        /* === SUBJECT CARD === */
        .subject-card {
            position: relative;
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--card-border);
            border-radius: 24px;
            padding: 35px 30px;
            box-shadow: var(--shadow-sm);
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            overflow: hidden;
            animation: cardFloat 6s ease-in-out infinite;
        }

        .subject-card:nth-child(1) { animation-delay: 0s; }
        .subject-card:nth-child(2) { animation-delay: 0.3s; }
        .subject-card:nth-child(3) { animation-delay: 0.6s; }
        .subject-card:nth-child(4) { animation-delay: 0.9s; }
        .subject-card:nth-child(5) { animation-delay: 1.2s; }
        .subject-card:nth-child(6) { animation-delay: 1.5s; }
        .subject-card:nth-child(7) { animation-delay: 1.8s; }

        @keyframes cardFloat {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .subject-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, var(--primary-green), var(--accent-green));
            opacity: 0;
            transition: opacity 0.4s ease;
            border-radius: 24px;
            z-index: 0;
        }

        .subject-card:hover {
            transform: translateY(-12px) scale(1.03);
            box-shadow: var(--shadow-lg);
        }

        .subject-card:hover::before {
            opacity: 0.05;
        }

        .subject-card:active {
            transform: translateY(-8px) scale(1.01);
        }

        /* === RIPPLE EFFECT === */
        .ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(76, 175, 80, 0.4);
            transform: scale(0);
            animation: rippleEffect 0.6s ease-out;
            pointer-events: none;
        }

        @keyframes rippleEffect {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        /* === CARD CONTENT === */
        .card-content {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .subject-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-green), var(--accent-green));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.2rem;
            color: white;
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.3);
            transition: all 0.4s ease;
        }

        .subject-card:hover .subject-icon {
            transform: rotateY(360deg) scale(1.1);
            box-shadow: 0 12px 30px rgba(76, 175, 80, 0.5);
        }

        .subject-info {
            text-align: center;
            width: 100%;
        }

        .subject-name {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
            line-height: 1.4;
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .subject-code {
            display: inline-block;
            background: linear-gradient(135deg, var(--primary-green), var(--accent-green));
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 8px;
            box-shadow: 0 4px 12px rgba(76, 175, 80, 0.2);
        }

        .subject-credits {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .subject-credits i {
            color: var(--primary-green);
        }

        /* === GLOW EFFECT === */
        .subject-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(76, 175, 80, 0.2) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
            pointer-events: none;
        }

        .subject-card:hover::after {
            opacity: 1;
            animation: glowPulse 2s ease-in-out infinite;
        }

        @keyframes glowPulse {
            0%, 100% {
                opacity: 0.3;
            }
            50% {
                opacity: 0.6;
            }
        }

        /* === FOOTER === */
        .footer {
            text-align: center;
            padding: 30px 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
            opacity: 0;
            animation: fadeInUp 1s ease-out 0.9s forwards;
        }

        .footer i {
            color: var(--primary-green);
            margin: 0 4px;
        }

        /* === RESPONSIVE === */
        @media (max-width: 1024px) {
            .subjects-grid {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 25px;
            }

            .main-title {
                font-size: 2.8rem;
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .top-bar {
                flex-direction: column;
                gap: 15px;
                align-items: stretch;
            }

            .back-button {
                justify-content: center;
            }

            .controls {
                justify-content: center;
            }

            .main-title {
                font-size: 2.2rem;
            }

            .subtitle {
                font-size: 1rem;
            }

            .subjects-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .subject-card {
                padding: 30px 25px;
            }

            .subject-icon {
                width: 70px;
                height: 70px;
                font-size: 2rem;
            }

            .subject-name {
                font-size: 1.05rem;
                min-height: 45px;
            }
        }

        @media (max-width: 480px) {
            .main-title {
                font-size: 1.8rem;
            }

            .subtitle {
                font-size: 0.9rem;
            }

            .subject-card {
                padding: 25px 20px;
            }

            .subject-icon {
                width: 60px;
                height: 60px;
                font-size: 1.8rem;
            }

            .subject-name {
                font-size: 0.95rem;
            }
        }

        /* === LOADING ANIMATION === */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-gradient-1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        .loading-overlay.hidden {
            opacity: 0;
            visibility: hidden;
        }

        .loader {
            width: 60px;
            height: 60px;
            border: 4px solid var(--card-border);
            border-top: 4px solid var(--primary-green);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            margin-top: 20px;
            font-size: 1.1rem;
            color: var(--text-primary);
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loader"></div>
        <div class="loading-text">Loading Subjects...</div>
    </div>

    <!-- Particles -->
    <div class="particles" id="particles"></div>

    <!-- Wave Background -->
    <div class="wave-background">
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <!-- Top Bar -->
        <div class="top-bar">
            <a href="/subjects?dept=${dept}&sem=${sem}" class="back-button" id="backButton">
                <i class="fas fa-arrow-left"></i>
                <span>Back</span>
            </a>
            <div class="controls">
                <div class="theme-toggle" id="themeToggle">
                    <i class="fas fa-moon"></i>
                </div>
                <div class="sound-toggle" id="soundToggle">
                    <i class="fas fa-volume-up"></i>
                </div>
            </div>
        </div>

        <!-- Header Section -->
        <div class="header-section">
            <h1 class="main-title"><%=dept%> Semester <%= sem%></h1>
            <p class="subtitle">Select a subject to explore notes, resources, and materials</p>
        </div>

        <!-- Subjects Grid -->
        <div class="subjects-grid">
            <!-- Subject 1: Integral and Vector Calculus -->

            <% for(let sub of subj ){ %>
              <%  const parts = sub.split("("); %>
  <% const name = parts[0].trim(); %>

  <% const inside = parts[1].replace(")", ""); %>
  <% const arr = inside.split(","); %>

  <% const code = arr[0].trim(); %>
  <% const credit= arr[1].trim(); %>
     <div class="subject-card"  onclick="goToSubject('<%= dept %>',
                     '<%= sem %>',
                     '<%= encodeURIComponent(sub) %>')" >
                <div class="card-content">
                    <div class="subject-icon">
                        <i class="fas fa-calculator"></i>
                    </div>
                    <div class="subject-info">
                        <div class="subject-code"><%=code%></div>
                        <div class="subject-name"><%=name %></div>
                        <div class="subject-credits">
                            <i class="fas fa-star"></i>
                            <span><%= credit %></span>
                        </div>
                    </div>
                </div>
            </div>
                 
           <% } %>
       

        </div>

        <!-- Footer -->
        <div class="footer">
            <p>Made with <i class="fas fa-heart"></i> for NIT Warangal Students</p>
        </div>
    </div>

    <script>
        // ============================================
        // VARIABLES
        // ============================================
        let soundEnabled = true;

        // ============================================
        // PARTICLES SYSTEM
        // ============================================
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = window.innerWidth > 768 ? 15 : 8;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const size = Math.random() * 60 + 40;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.animationDelay = `${Math.random() * 5}s`;
                particle.style.animationDuration = `${Math.random() * 10 + 20}s`;
                
                particlesContainer.appendChild(particle);
            }
        }

        // ============================================
        // SOUND EFFECTS
        // ============================================
        function playSound(type = 'click') {
            if (!soundEnabled) return;
            
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            if (type === 'click') {
                oscillator.frequency.value = 800;
                gainNode.gain.value = 0.1;
            } else if (type === 'success') {
                oscillator.frequency.value = 1200;
                gainNode.gain.value = 0.15;
            }
            
            oscillator.start();
            gainNode.gain.exponentialRampToValueAtTime(0.00001, audioContext.currentTime + 0.3);
            oscillator.stop(audioContext.currentTime + 0.3);
        }

        // ============================================
        // RIPPLE EFFECT
        // ============================================
        function createRipple(event, element) {
            const ripple = document.createElement('div');
            ripple.className = 'ripple';
            
            const rect = element.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = event.clientX - rect.left - size / 2;
            const y = event.clientY - rect.top - size / 2;
            
            ripple.style.width = ripple.style.height = `${size}px`;
            ripple.style.left = `${x}px`;
            ripple.style.top = `${y}px`;
            
            element.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        }

        // ============================================
        // THEME TOGGLE
        // ============================================
        function setupThemeToggle() {
            const themeToggle = document.getElementById('themeToggle');
            const body = document.body;
            const icon = themeToggle.querySelector('i');
            
            // Check saved theme preference
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                body.classList.add('dark-theme');
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }
            
            themeToggle.addEventListener('click', function() {
                playSound();
                body.classList.toggle('dark-theme');
                
                if (body.classList.contains('dark-theme')) {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                    localStorage.setItem('theme', 'dark');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                    localStorage.setItem('theme', 'light');
                }
            });
        }

        // ============================================
        // SOUND TOGGLE
        // ============================================
        function setupSoundToggle() {
            const soundToggle = document.getElementById('soundToggle');
            const icon = soundToggle.querySelector('i');
            
            // Check saved sound preference
            const savedSound = localStorage.getItem('sound');
            if (savedSound === 'off') {
                soundEnabled = false;
                icon.classList.remove('fa-volume-up');
                icon.classList.add('fa-volume-mute');
            }
            
            soundToggle.addEventListener('click', function() {
                soundEnabled = !soundEnabled;
                
                if (soundEnabled) {
                    icon.classList.remove('fa-volume-mute');
                    icon.classList.add('fa-volume-up');
                    localStorage.setItem('sound', 'on');
                    playSound();
                } else {
                    icon.classList.remove('fa-volume-up');
                    icon.classList.add('fa-volume-mute');
                    localStorage.setItem('sound', 'off');
                }
            });
        }

        // ============================================
        // SUBJECT CARD INTERACTIONS
        // ============================================
        function setupSubjectCards() {
            const subjectCards = document.querySelectorAll('.subject-card');
            
            subjectCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    createRipple(e, this);
                    playSound();
                    
                    const subjectCode = this.dataset.subject;
                    const subjectName = this.querySelector('.subject-name').textContent;
                    
                    // Add loading animation
                    this.style.transform = 'scale(0.95)';
                    
                    setTimeout(() => {
                        // Show loading overlay
                        const overlay = document.getElementById('loadingOverlay');
                        overlay.classList.remove('hidden');
                        
                        setTimeout(() => {
                            // Navigate to subject page
                            // Replace with actual navigation URL
                            
                            // For demo purposes (remove in production)
                            console.log('Navigating to:', subjectCode, '-', subjectName);
                        }, 500);
                    }, 200);
                });
                
                // Add hover sound effect
                card.addEventListener('mouseenter', function() {
                    if (soundEnabled) {
                        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                        const oscillator = audioContext.createOscillator();
                        const gainNode = audioContext.createGain();
                        
                        oscillator.connect(gainNode);
                        gainNode.connect(audioContext.destination);
                        
                        oscillator.frequency.value = 600;
                        gainNode.gain.value = 0.05;
                        
                        oscillator.start();
                        gainNode.gain.exponentialRampToValueAtTime(0.00001, audioContext.currentTime + 0.15);
                        oscillator.stop(audioContext.currentTime + 0.15);
                    }
                });
            });
        }

        // ============================================
        // BACK BUTTON
        // ============================================
        function setupBackButton() {
            const backButton = document.getElementById('backButton');
            
